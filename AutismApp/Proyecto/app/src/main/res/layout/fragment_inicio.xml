<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.javie.proyecto.Inicio"
    android:id="@+id/fragement_inicio"
    android:background="@drawable/backgroud">
    <include layout="@layout/barra_de_progreso" />
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/learnig"
                android:layout_gravity="left"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="20dp"
                android:text="BIENVENIDO "
                android:id="@+id/txtBienvenido"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_gravity="center_horizontal"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">
                    <TableRow>
                        <Button
                            android:elevation="20dp"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/btnEditarCuenta"
                            android:textColor="#ffff"
                            android:textStyle="bold"
                            android:background="@drawable/round_button"
                            android:text="Editar Cuenta"
                            />
                        <Button
                            android:elevation="20dp"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="40dp"
                            android:id="@+id/btnSalir"
                            android:textColor="#ffff"
                            android:textStyle="bold"
                            android:background="@drawable/round_button"
                            android:text="Sailr"
                            />
                    </TableRow>

                </TableLayout>



            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/smart_brain"
                android:layout_gravity="right"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
