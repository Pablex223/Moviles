<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.javie.proyecto.Formulario"
    android:id="@+id/fragment_formulario"
    android:background="@drawable/backgroud">

    <include  layout="@layout/barra_de_progreso" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="56dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:text="Área Social"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="18dp"
                android:background="@color/colorAccent"/>

            <!-- Pregunta 1 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="¿Muestra interes por otros niños o personas?"
                android:gravity="left"
                android:textColor="#ffff"
                android:textSize="15dip"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/SiPregunta1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="Sí" />
                    <RadioButton
                        android:id="@+id/NoPregunta1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="No"/>

                </RadioGroup>
        </LinearLayout>


            <!-- Pregunta 2 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="¿Sabe reconocer y señalar partes del cuerpo?"
                android:gravity="left"
                android:textColor="#ffff"
                android:textSize="15dip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/SiPregunta2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="Sí"/>
                    <RadioButton
                        android:id="@+id/NoPregunta2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="No"/>

                </RadioGroup>
            </LinearLayout>

            <!-- Pregunta 3 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="¿Avisa si necesita ir al baño?"
                android:gravity="left"
                android:textColor="#ffff"
                android:textSize="15dip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/SiPregunta3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="Sí"/>
                    <RadioButton
                        android:id="@+id/NoPregunta3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="No"/>

                </RadioGroup>
            </LinearLayout>

            <!-- Pregunta 4 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="¿Responde correctamente de acuerdo a su género?"
                android:gravity="left"
                android:textColor="#ffff"
                android:textSize="15dip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/SiPregunta4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="Sí"/>
                    <RadioButton
                        android:id="@+id/NoPregunta4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="No"/>

                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:text="Comunicativa Lingüística"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="18dp"
                android:background="@color/colorAccent"/>

            <!-- Pregunta 5 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="¿Responde cuando se le llama por su nombre?"
                android:gravity="left"
                android:textColor="#ffff"
                android:textSize="15dip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/SiPregunta5"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="Sí"/>
                    <RadioButton
                        android:id="@+id/NoPregunta5"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="No"/>

                </RadioGroup>
            </LinearLayout>

            <!-- Pregunta 6 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="¿Reconoce sonidos con la mirada y reconoce los objetos(señala)?"
                android:gravity="left"
                android:textColor="#ffff"
                android:textSize="15dip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/SiPregunta6"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="Sí"/>
                    <RadioButton
                        android:id="@+id/NoPregunta6"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="No"/>

                </RadioGroup>
            </LinearLayout>
            <!-- Pregunta 7 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="¿Emite por lo menos 3 o más sílabas(pa-ta-da)?"
                android:gravity="left"
                android:textColor="#ffff"
                android:textSize="15dip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/SiPregunta7"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="Sí"/>
                    <RadioButton
                        android:id="@+id/NoPregunta7"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="No"/>

                </RadioGroup>
            </LinearLayout>
            <!-- Pregunta 8 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="¿Distingue emociones?"
                android:gravity="left"
                android:textColor="#ffff"
                android:textSize="15dip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/SiPregunta8"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="Sí"/>
                    <RadioButton
                        android:id="@+id/NoPregunta8"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="No"/>

                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:text="Flexibilidad de Conductas, Intereses y Pensamientos"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="18dp"
                android:background="@color/colorAccent"/>
            <!-- Pregunta 9 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="¿Es consciente a sonidos musicales?"
                android:gravity="left"
                android:textColor="#ffff"
                android:textSize="15dip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/SiPregunta9"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="Sí"/>
                    <RadioButton
                        android:id="@+id/NoPregunta9"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="No"/>

                </RadioGroup>
            </LinearLayout>

            <!-- Pregunta 10 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="¿Muestra interés por movimientos corporales?"
                android:gravity="left"
                android:textColor="#ffff"
                android:textSize="15dip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/SiPregunta10"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="Sí"/>
                    <RadioButton
                        android:id="@+id/NoPregunta10"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="No"/>

                </RadioGroup>
            </LinearLayout>
            <!-- Pregunta 11 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="¿Sabe cómo comportarse ante cada situación o evento?"
                android:gravity="left"
                android:textColor="#ffff"
                android:textSize="15dip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/SiPregunta11"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="Sí"/>
                    <RadioButton
                        android:id="@+id/NoPregunta11"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="No"/>

                </RadioGroup>
            </LinearLayout>
            <!-- Pregunta 12 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="¿Presenta problemas de agresividad?"
                android:gravity="left"
                android:textColor="#ffff"
                android:textSize="15dip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/SiPregunta12"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="Sí"/>
                    <RadioButton
                        android:id="@+id/NoPregunta12"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffff"
                        android:text="No"/>

                </RadioGroup>
            </LinearLayout>

            <!-- Submit Button -->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnSubmitFormulario"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:text="Enviar"/>

        </LinearLayout>
    </ScrollView>


</FrameLayout>
